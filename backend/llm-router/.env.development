# Development Environment Configuration for LLM Router

# Environment
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000
SSL_ENABLED=false

# Streaming
STREAMING_ENABLED=true

# Security settings
REQUEST_TTL_SECONDS=60
DISABLE_DOCS=false

# Inference transport (use UNIX socket for development)
INFERENCE_TRANSPORT=unix
INFERENCE_ENDPOINTS=["/tmp/inference.sock"]
INFERENCE_TIMEOUT_SECONDS=60
INFERENCE_CONNECT_TIMEOUT_SECONDS=10

# Circuit breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_RESET_SECONDS=30
CIRCUIT_BREAKER_ENABLED=true

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=30
RATE_LIMIT_ENABLED=true

# HPKE keys (development paths - not for production)
ROUTER_HPKE_PRIVATE_KEY_PATH=./dev-keys/hpke-private.key
ROUTER_HPKE_PUBLIC_KEY_PATH=./dev-keys/hpke-public.key
HPKE_KEY_ROTATION_HOURS=24

# Logging
LOG_LEVEL=INFO
DISABLE_ACCESS_LOGS=false
DISABLE_REQUEST_BODY_LOGGING=false
DISABLE_RESPONSE_BODY_LOGGING=false

# Memory and security
MLOCK_SECRETS=false  # Disable in development for easier debugging
DISABLE_SWAP_USAGE=false

# Monitoring
METRICS_ENABLED=true

# Development settings
DEV_RELOAD=true
DEV_DEBUG=true