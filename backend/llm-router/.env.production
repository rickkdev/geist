# Production Environment Configuration for LLM Router

# Environment
ENVIRONMENT=production

# Server settings
HOST=0.0.0.0
PORT=443
SSL_ENABLED=true
SSL_KEYFILE=/etc/llm-router/certs/server.key
SSL_CERTFILE=/etc/llm-router/certs/server.crt

# Streaming
STREAMING_ENABLED=true

# Security settings
REQUEST_TTL_SECONDS=60
DISABLE_DOCS=true

# Inference transport (HTTPS over WireGuard for production)
INFERENCE_TRANSPORT=https
INFERENCE_ENDPOINTS=["https://10.0.0.2:8001", "https://10.0.0.3:8001"]
INFERENCE_TIMEOUT_SECONDS=90
INFERENCE_CONNECT_TIMEOUT_SECONDS=15
INFERENCE_READ_TIMEOUT_SECONDS=180
INFERENCE_WRITE_TIMEOUT_SECONDS=45
REQUEST_BUDGET_SECONDS=600
ENABLE_CLIENT_DISCONNECT_CANCELLATION=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10
UNHEALTHY_THRESHOLD=3
HEALTHY_THRESHOLD=2

# mTLS Configuration for Production
MTLS_ENABLED=true
MTLS_CLIENT_CERT_PATH=/etc/llm-router/certs/router-cert.pem
MTLS_CLIENT_KEY_PATH=/etc/llm-router/certs/router-key.pem
MTLS_CA_CERT_PATH=/etc/llm-router/ca/ca-cert.pem
MTLS_VERIFY_HOSTNAME=true

# Circuit breaker
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_RESET_SECONDS=60
CIRCUIT_BREAKER_ENABLED=true

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=30
RATE_LIMIT_ENABLED=true

# HPKE keys (production paths)
ROUTER_HPKE_PRIVATE_KEY_PATH=/etc/llm-router/keys/hpke-private.key
ROUTER_HPKE_PUBLIC_KEY_PATH=/etc/llm-router/keys/hpke-public.key
HPKE_KEY_ROTATION_HOURS=12

# Logging
LOG_LEVEL=INFO
DISABLE_ACCESS_LOGS=true
DISABLE_REQUEST_BODY_LOGGING=true
DISABLE_RESPONSE_BODY_LOGGING=true

# Memory and security
MLOCK_SECRETS=true
DISABLE_SWAP_USAGE=true

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PUSHGATEWAY_URL=http://10.0.0.4:9091

# Development settings
DEV_RELOAD=false
DEV_DEBUG=false