# Production Environment Configuration for LLM Router

# Environment
ENVIRONMENT=production

# Server settings
HOST=0.0.0.0
PORT=8000
SSL_ENABLED=true
SSL_KEYFILE=/etc/ssl/private/router.key
SSL_CERTFILE=/etc/ssl/certs/router.crt

# Streaming
STREAMING_ENABLED=true

# Security settings
REQUEST_TTL_SECONDS=60
DISABLE_DOCS=true

# Inference transport (HTTPS over WireGuard for production)
INFERENCE_TRANSPORT=https
INFERENCE_ENDPOINTS=["https://10.0.0.2:8001", "https://10.0.0.3:8001"]
INFERENCE_TIMEOUT_SECONDS=60
INFERENCE_CONNECT_TIMEOUT_SECONDS=10

# Circuit breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_RESET_SECONDS=30
CIRCUIT_BREAKER_ENABLED=true

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=30
RATE_LIMIT_ENABLED=true

# HPKE keys (production paths)
ROUTER_HPKE_PRIVATE_KEY_PATH=/etc/llm-router/hpke-private.key
ROUTER_HPKE_PUBLIC_KEY_PATH=/etc/llm-router/hpke-public.key
HPKE_KEY_ROTATION_HOURS=24

# Logging
LOG_LEVEL=INFO
DISABLE_ACCESS_LOGS=true
DISABLE_REQUEST_BODY_LOGGING=true
DISABLE_RESPONSE_BODY_LOGGING=true

# Memory and security
MLOCK_SECRETS=true
DISABLE_SWAP_USAGE=true

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PUSHGATEWAY_URL=https://prometheus.internal:9091

# Development settings
DEV_RELOAD=false
DEV_DEBUG=false