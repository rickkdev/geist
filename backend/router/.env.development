# Development Environment Configuration
# This file configures the router for development mode with UNIX sockets

# Environment
ENVIRONMENT=development

# Server settings
HOST=127.0.0.1
PORT=8000
SSL_ENABLED=false

# Inference transport - USE UNIX SOCKET in development
INFERENCE_TRANSPORT=unix
INFERENCE_ENDPOINTS=["/tmp/inference.sock"]

# Timeouts (more relaxed in development)
INFERENCE_TIMEOUT_SECONDS=60
INFERENCE_CONNECT_TIMEOUT_SECONDS=10
INFERENCE_READ_TIMEOUT_SECONDS=120
INFERENCE_WRITE_TIMEOUT_SECONDS=30
REQUEST_BUDGET_SECONDS=300

# Health monitoring
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=5
UNHEALTHY_THRESHOLD=3
HEALTHY_THRESHOLD=2

# Security (relaxed for development)
REQUEST_TTL_SECONDS=60
DISABLE_DOCS=false

# Circuit breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_RESET_SECONDS=30

# Rate limiting (more permissive in development)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=60

# HPKE keys (development keys)
ROUTER_HPKE_PRIVATE_KEY_PATH=./dev-keys/hpke-private.key
ROUTER_HPKE_PUBLIC_KEY_PATH=./dev-keys/hpke-public.key
HPKE_KEY_ROTATION_HOURS=24

# Logging
LOG_LEVEL=DEBUG
DISABLE_ACCESS_LOGS=false
DISABLE_REQUEST_BODY_LOGGING=false
DISABLE_RESPONSE_BODY_LOGGING=false

# Development specific
DEV_RELOAD=true
DEV_DEBUG=true

# Streaming
STREAMING_ENABLED=true
ENABLE_CLIENT_DISCONNECT_CANCELLATION=true

# Memory and security (relaxed for development)
MLOCK_SECRETS=false
DISABLE_SWAP_USAGE=false

# Monitoring
METRICS_ENABLED=true

# Harmony settings (optimized for mobile)
HARMONY_ENABLED=true
HARMONY_REASONING_EFFORT=low
HARMONY_INCLUDE_ANALYSIS=true